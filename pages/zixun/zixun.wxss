/* pages/zixun/zixun.wxss */
.expert_nav{
  position: absolute;
  z-index: 100;
  background: #fff;
  display: flex;width: 100%;
  flex-direction: row;
  padding: 20rpx 25rpx;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  margin: 0rpx -25rpx;
  left: 10rpx;
  justify-content: space-between;
}
.nav_a{
  width: 33%;
  display: flex;
  border-left:1px solid #e5e5e5;
  justify-content:center;
  align-items: center;
  flex-direction: row;
}
.nb{border:none;}
.nav_a image{
  width: 20rpx;height: 12rpx;
  margin: 0 0 0 20rpx;
}
.nav_a text{
  font-size:30rpx;
  color: #666;
}
.listbox{
  margin-top:100rpx; 
}
.zixun_list{
  width: 662rpx;height: auto;
  display: flex;
  flex-direction: column;
  justify-content:center;
  background: #fff;
  border-radius: 15rpx;
  margin: 30rpx 0;
  padding-bottom: 20rpx;
  box-shadow: 0 0 10rpx 5rpx #dee8e9;
}
.top{
  width: 662rpx;height: 9rpx;
  margin-bottom: 20rpx;
}
.zx_one{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
}
.zximg{margin: 0 30rpx 0 0;}
.zximg image{
  width: 105rpx;height: 105rpx;
  border-radius: 50%;
}
.zxtxt text{
  display: flex;
  margin: 10rpx 0;
}
.teama{font-size: 34rpx;}
.teamb{font-size: 30rpx;color:#9a9a9a;}
.zx_info{
  width:560rpx;
  margin: 20rpx auto;
  color: #666;
  line-height:50rpx;
  font-size: 30rpx;
}
.line{
  width: 100%;
  border-top:1px solid #e5e5e5;
}
.zxa{
  font-size: 30rpx;
  color: #999;
  text-align: center;
  margin: 10rpx 0;
}
.zxb{
  width:560rpx;
  margin: 0 auto 10rpx;
}
.zxb_b{
  font-size: 32rpx;
  margin: 0 50rpx 0 0;
}
.zxb_c{
  font-size: 30rpx;
  color: #666;
}
.more{
  font-size: 32rpx;
  color: #50aaf1;
  text-align: center;
  margin-top: 30rpx;
}

.slidedown{
    transform:translateY(0%);
}
.temp view{
    border-bottom: 1px solid #d1d3d4;
    font-size: 14px;
    color: #666;
}
.quyu{
    position: relative;
    display: none;
    height: auto;
    z-index: 5;
}
.quyu .qy{
    overflow-y: scroll;
    float: left;
    height: auto;
    line-height: 80rpx;
    box-sizing: border-box; 
    font-size: 14px;
    color: #717273;
}
.qy view{
    text-overflow: ellipsis;
    overflow: hidden; 
    white-space:nowrap;  
    padding-left: 15rpx; 
}
.quyu-left{
    background: #e0e0e0;
    width: 30%;
}
.quyu-center{
    background: #fff;
    width:70%;
}
.quyu-center view{
    border-bottom: 1px solid #f1f1f1;
}
.current{
    background: #fff;
}
.current2{
    background: #fff;
}
.fullbg{
    position: fixed;
    top:0rpx;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgba(1, 1, 1,.5);
    transition: all 2s;
}
.fullopacity{
    opacity: .5;
}
.menu_box{
  position: absolute;
  z-index: 99;
  width: 100%;
  text-align: center;
  top: 80rpx;
  overflow: hidden;
}
.active image{
    transform:rotate(180deg);
}
@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidown{
    display: block;
    animation: slidown .7s ease-in both;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: block;
    animation: slidup .7s ease-in both;
}
.disappear{
    display: none;
}
.temp{
  background: #fff;
}
.temp view{
  padding: 20rpx 0;
}
.nodata{
  padding-top: 200rpx;
  font-size: 36rpx;
}